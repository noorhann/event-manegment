<div class="latest-events-block">
  <h2>{{ 'Latest Events'|t }}</h2>
  {% if events %}
    <ul>
      {% for event in events %}
        <li>
          <a href="{{ event.url }}">{{ event.title }}</a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>{{ 'No recent events found.'|t }}</p>
  {% endif %}
</div>
